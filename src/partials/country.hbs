<div class="container">
    <div class="country">
        <div class="country__info">
            <h2 class="country__title">{{name}}</h2>
            <p class="country__capital"><b>Capital: </b>{{capital}}</p>
            <p class="country__population"><b>Population: </b>{{population}}</p>
            <p class="country__languages"><b>Languages: </b></p>
            <ul class="country__languages-list">
                {{#each languages}}
                <li class="country__languages-item">{{this.name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="country__picture"><img src="{{flags.png}}" alt="{{name}}"></div>
    </div>
</div>